{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "allowJs": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./src",
    "declaration": true,
    "forceConsistentCasingInFileNames": false,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
